          <li class="nav-item">
            <a href="/recursos" class="nav-link">Recursos</a>
          </li>
          <li class="nav-item">
            <a href="/cv" class="nav-link">CV</a>
          </li>
          <li class="nav-item">
            <a href="/contacto" class="nav-link nav-link-cta">Contacto</a>
          </li>
        </ul>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Sistema de filtros
    const filterButtons = document.querySelectorAll('.filter-btn');
    const resourceCategories = document.querySelectorAll('.resource-category');

    filterButtons.forEach(button => {
      button.addEventListener('click', function(this: HTMLButtonElement) {
        const targetCategory = this.dataset.category;
        
        // Actualizar botones activos
        filterButtons.forEach(btn => btn.classList.remove('active'));
        this.classList.add('active');
        
        // Mostrar/ocultar categorías
        resourceCategories.forEach(category => {
          const categoryElement = category as HTMLElement;
          if (targetCategory === 'all' || categoryElement.dataset.category === targetCategory) {
            category.classList.remove('hidden');
            categoryElement.style.display = 'block';
          } else {
            category.classList.add('hidden');
            setTimeout(() => {
              if (category.classList.contains('hidden')) {
                categoryElement.style.display = 'none';
              }
            }, 300);
          }
        });
      });
    });

    // Animación de entrada para elementos
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          (entry.target as HTMLElement).style.animationDelay = Math.random() * 0.3 + 's';
          entry.target.classList.add('animate-in');
        }
      });
    }, observerOptions);

    // Observar elementos para animación
    document.querySelectorAll('.resource-card, .stat-card, .tool-card, .timeline-item, .report-item').forEach(el => {
      observer.observe(el);
    });

    // Tracking de enlaces externos
    document.querySelectorAll('a[target="_blank"]').forEach(link => {
      link.addEventListener('click', function(this: HTMLAnchorElement) {
        const url = this.href;
        const text = (this.textContent || '').trim();
        console.log(`📊 Enlace externo visitado: ${text} - ${url}`);
        
        // Aquí podrías añadir tracking de analytics
        // gtag('event', 'click', { event_category: 'external_link', event_label: text });
      });
    });

    // Indicador de recursos cargados
    const totalResources = document.querySelectorAll('.resource-card, .tool-card, .report-item').length;
    console.log(`✅ Página de recursos cargada con ${totalResources} recursos disponibles`);
  });
</script>
<script>
document.addEventListener('DOMContentLoaded', function() {
  function toggleTarget(header: HTMLElement) {
    const content = header.nextElementSibling;
    const icon = header.querySelector('.toggle-icon');
    
    if (!content || !icon) return;
    
    if (content.classList.contains('active')) {
      content.classList.remove('active');
      icon.textContent = '+';
      (icon as HTMLElement).style.transform = 'rotate(0deg)';
    } else {
      // Cerrar otros accordions
      document.querySelectorAll('.target-content.active').forEach(item => {
        item.classList.remove('active');
      });
      document.querySelectorAll('.toggle-icon').forEach(item => {
        item.textContent = '+';
        (item as HTMLElement).style.transform = 'rotate(0deg)';
      });
      
      // Abrir el actual
      content.classList.add('active');
      icon.textContent = '‚àí';
      (icon as HTMLElement).style.transform = 'rotate(180deg)';
    }
  }

  // Agregar event listeners a todos los headers
  document.querySelectorAll('.target-header').forEach(header => {
    header.addEventListener('click', () => toggleTarget(header as HTMLElement));
  });
});
</script>